<table id="dataTableNation" class="table" style="background-color: #eef9b8;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% nation.forEach((e, index)=> { %>
            <tr>
                <td scope="row" class="align-middle">
                    <%= index + 1 %>
                </td>
                <td class="align-middle" >
                    <img src="<%= e.image %>" class="flag-nation" alt="...">
                </td>
                <td class="align-middle">
                    <%= e.name %>
                </td>
                <td class="align-middle">
                    <%= e.description %>
                </td>
                <td class="d-flex">
                    <div class="col-lg-6 col-md-12 my-1 col-sm-12">
                        <a href="javascript:void()" class="btn btn-block btn-info button-update"
                            data-id="<%= e.id %>" data-image="<%= e.image %>" data-name="<%= e.name %>" data-description="<%= e.description%>">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="col-lg-6 col-md-12 my-1 col-sm-12">
                        <form action="/nation/<%= e.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-block btn-danger" type="submit"
                                onclick="return confirm('Are you sure want to delete this nation ?')">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
            <% })%>
    </tbody>
</table>