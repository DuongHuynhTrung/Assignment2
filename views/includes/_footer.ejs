<script>
  $("#dataTablePlayer").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let image = $(this).data("image");
    let club = $(this).data("club");
    let position = $(this).data("position");
    let goals = $(this).data("goals");
    let iscaptain = $(this).data("iscaptain");
    let nation = $(this).data("nationid");

    $("#edit-modal").modal("show");

    $(".id").val(id);
    $(".name").val(name);
    $(".image").val(image);
    $(".club").val(club);
    $(".position").val(position);
    $(".goals").val(goals);
    $(".iscaptain").val(iscaptain);
    $(".nation").val(nation);
  });

  $("#dataTableNation").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let image = $(this).data("image");
    let name = $(this).data("name");
    let description = $(this).data("description");

    $("#edit-modal").modal("show");

    $(".id").val(id);
    $(".image").val(image);
    $(".name").val(name);
    $(".description").val(description);
  });

